---
layout: "wrapper.liquid"
---

<h1>{{ title }}</h1>

{% for post in collections.posts %}    
<a href="{{ post.url }}">
    <article>
        {% if post.data.image %}
        <img alt="{{post.data.title}}" src="{{post.data.image}}" />
        {% endif %}
        <caption>
            {{ post.data.title }}
        </caption>
    </article>
</a>
{% endfor %}
